<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Other attributes -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:fontFamily">@font/my_font_family</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Widget.Theme.DigitalMinimalism.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.DigitalMinimalism.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <style name="Base.Widget.MaterialComponents.TextView" parent="Widget.AppCompat.TextView" />
    <style name="Widget.MaterialComponents.TextView" parent="Base.Widget.MaterialComponents.TextView" />

    <style name="CustomCircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="trackColor">@color/progressIndicatorBackgroundColor</item>
        <item name="indicatorColor">@color/progressIndicatorColor</item>
        <item name="trackThickness">20dp</item> <!-- Example thickness -->
        <!-- Other customization like trackCornerRadius, indicatorSize can be added here -->
    </style>


    <style name="BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/colorPrimaryDark</item>
        <item name="itemTextColor">@color/colorPrimary</item>
    </style>

    <!-- Style for number pad buttons. -->
    <style name="NumberPadButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item> <!-- White text -->
        <item name="android:background">@drawable/button_rounded_background</item>
        <!-- Add any other styling you need here -->
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
    </style>
        <!-- Add any other styling you need here -->

</resources>