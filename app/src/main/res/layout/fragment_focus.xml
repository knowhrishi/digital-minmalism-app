<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Countdown Timer and Progress Indicator Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/countdown_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    style="@style/Widget.MaterialComponents.TextView"
                    android:text="No active focus mode."/>

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progress_circular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Focus Mode Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/set_focus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Focus Mode"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_start_focus_mode"
                app:iconGravity="textStart"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel Focus Mode"
                android:layout_marginStart="8dp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_cancel"
                app:iconGravity="textStart"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Additional UI elements can be added here -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- Status Indicator -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Inactive"
                android:layout_marginTop="16dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"/>

            <!-- Existing Views... -->

            <!-- Streaks Display -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/streaks_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Streak: 0"
                android:layout_marginTop="16dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"/>

            <!-- Goal Progress Bar -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/goal_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:maxWidth="5dp"/>

            <!-- Reward Badges Display -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/reward_badges_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Badges: None"
                android:layout_marginTop="16dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"/>

            <!-- Existing Buttons... -->

            <!-- Total Focus Time Display -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/total_focus_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Focus Time: 0"
                android:layout_marginTop="16dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"/>

            <!-- Average Focus Time Display -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/average_focus_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average Focus Time: 0"
                android:layout_marginTop="16dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"/>

            <!-- Longest Focus Session Display -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/longest_focus_session_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longest Focus Session: 0"
                android:layout_marginTop="16dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
