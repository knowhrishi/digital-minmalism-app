<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundAll">

    <!-- Preparation time selection buttons -->

    <TextView
        android:id="@+id/button_start_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/circle_background_notselected"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="No, I'd like to start now"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_prepare" />

    <TextView
        android:id="@+id/button_90_min_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/circle_background_notselected"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="90-Minute Focus Timer"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_select_duration2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_pomo_timer"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/button_pomo_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/circle_background_selected"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="Pomodoro"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_select_duration2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_select_duration"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_prepare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_black"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Would you like 5 minutes to prepare?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.708" />

    <TextView
        android:id="@+id/button_prepare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle_background_notselected"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="Yes, I want to prepare"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_prepare" />

    <TextView
        android:id="@+id/textView_select_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_black"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Select the type of timer you would like to use"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/textView_select_duration2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="Select how long you would like to work for"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349" />


    <TextView
        android:id="@+id/button_second_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:background="@drawable/circle_background_notselected"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="52/17 Timer"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_select_duration2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_pomo_timer"
        app:layout_constraintTop_toBottomOf="@+id/textView_select_duration"
        app:layout_constraintVertical_bias="0.194" />

    <Button
        android:id="@+id/button_begin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_black"
        android:background="@drawable/square_button"
        android:text="Let's Begin!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_start_now"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/LinearLayout_study"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/cardview_background_selector"
        android:elevation="0dp"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView_prepare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_select_duration2"
        app:layout_constraintVertical_bias="0.179">


        <ImageView
            android:id="@+id/imageViewStudy"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_study"
            android:tooltipText="study" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/colorPrimaryDark"
            android:text="Study"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutWork"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/cardview_background_selector"
        android:elevation="0dp"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView_prepare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toEndOf="@+id/LinearLayout_study"
        app:layout_constraintTop_toBottomOf="@+id/textView_select_duration2"
        app:layout_constraintVertical_bias="0.179">


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_work"
            android:tooltipText="study" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/colorPrimaryDark"
            android:text="Work"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutExercise"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/cardview_background_selector"
        android:elevation="0dp"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView_prepare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toEndOf="@+id/LinearLayoutWork"
        app:layout_constraintTop_toBottomOf="@+id/textView_select_duration2"
        app:layout_constraintVertical_bias="0.179">


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_dumbbell"
            android:tooltipText="Exercise" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/poppins_medium"
            android:text="Exercise"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutRelax"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/cardview_background_selector"
        android:elevation="0dp"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView_prepare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/LinearLayoutExercise"
        app:layout_constraintTop_toBottomOf="@+id/textView_select_duration2"
        app:layout_constraintVertical_bias="0.181">


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_relax"
            android:tooltipText="Exercise" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/colorPrimaryDark"
            android:text="Relax"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutOther"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/cardview_background_selector"
        android:elevation="0dp"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView_prepare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_select_duration2"
        app:layout_constraintVertical_bias="0.627">


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_other"
            android:tooltipText="Exercise" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/colorPrimaryDark"
            android:text="Other"
            android:textSize="12dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
