<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrendAnalysisFragment"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="16dp" />


    <!-- Bar Chart for displaying data -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_above="@+id/analysis_type_spinner"
        android:padding="16dp" />

    <!-- Spinner for analysis type selection -->
    <Spinner
        android:id="@+id/analysis_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/comparison_dropdown"
        android:entries="@array/analysis_types"
