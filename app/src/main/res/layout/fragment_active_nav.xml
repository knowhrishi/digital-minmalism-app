
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <!-- Total Focus Time Display -->
                <TextView
                    android:id="@+id/total_focus_time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Total Time: 0" />

                <!-- Average Focus Time Display -->
                <TextView
                    android:id="@+id/average_focus_time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Average Time: 0" />

                <!-- Longest Focus Session Display -->
                <TextView
                    android:id="@+id/longest_focus_session_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Longest Session: 0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Status Indicator -->
                <TextView
                    android:id="@+id/status_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Status: Inactive"/>

                <!-- Streaks Display -->
                <TextView
                    android:id="@+id/streaks_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Current Streak: 0"/>

                <!-- Goal Progress Bar -->


                <!-- Reward Badges Display -->
                <TextView
                    android:id="@+id/reward_badges_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Badges: None"/>
            </LinearLayout>
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/goal_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="5dp"
                android:padding="10dp"
                android:tooltipText="Goal Progress"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" />
            <!-- Countdown Timer and Progress Indicator Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/white"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/countdown_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No active focus mode."
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:textSize="20sp" />

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progress_circular"
                        android:layout_width="22dp"
                        android:layout_height="22dp"

                        style="@style/CustomCircularProgressIndicator" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Focus Mode Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/set_focus_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Focus Mode"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_start_focus_mode"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Cancel Focus Mode"
                    android:visibility="gone"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_cancel"
                    app:iconGravity="textStart" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>